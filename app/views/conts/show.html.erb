<%- model_class = Cont -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @cont.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @cont.body %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              conts_path, :class => 'btn btn-success', :style => "color: #ffffff;"  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cont_path(@cont), :class => 'btn btn-warning', :style => "color: #ffffff" %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cont_path(@cont),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger', :style => "color: #ffffff;" %>
