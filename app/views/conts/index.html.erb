<%- model_class = Cont -%>
<div class="page-header">
  <h1>Contingencies<%#=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @conts.each do |cont| %>
      <tr>
        <td><%= link_to cont.id, cont_path(cont) %></td>
        <td><%= cont.name %></td>
        <td><%=l cont.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      cont_path(cont), :class => 'btn btn-success btn-xs', :style => "color: #f7f5ee;" %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cont_path(cont), :class => 'btn btn-warning btn-xs', :style => "color: #000000;" %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cont_path(cont),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger', :style => "color: #f7f5ee;" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_cont_path,
            :class => 'btn btn-success', :style => "color: #f7f5ee;" %>
